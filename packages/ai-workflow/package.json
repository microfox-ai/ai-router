{
  "name": "@microfox/ai-workflow",
  "version": "1.0.0",
  "description": "Workflow + orchestration primitives for Microfox (runtime-agnostic contracts and Next.js client helpers).",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "prettier-check": "prettier --check \"./**/*.ts*\"",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./orchestrate": {
      "types": "./dist/orchestrate.d.ts",
      "import": "./dist/orchestrate.mjs",
      "require": "./dist/orchestrate.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./runtimeAdapter": {
      "types": "./dist/runtimeAdapter.d.ts",
      "import": "./dist/runtimeAdapter.mjs",
      "require": "./dist/runtimeAdapter.js"
    }
  },
  "dependencies": {
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "tsup": "^8",
    "typescript": "^5.6.3",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "@microfox/ai-workflow",
    "typescript",
    "workflow",
    "orchestration"
  ]
}

